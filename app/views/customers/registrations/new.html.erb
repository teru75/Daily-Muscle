<div class="container-fruid signup-content">
  <div class="row" style="display: flex; align-items: center; justify-content: center; height: 600px;">
    <div class="customer-devise-box">
      <div class="signup-form">
        <h2 class="title">アカウント作成</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field login-top-form">
          <label>名前</label>
          <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"中山きんに君" %>
        </div>

        <div class="field">
          <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"nakayama@gmail.com" %>
        </div>

        <div class="field">
          <label>パスワード（6文字以上）</label>
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"パスワード" %>
        </div>

        <div class="field">
          <label>確認用パスワード</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"もう一度ご入力ください" %>
        </div>

        <div class="actions">
          <%= f.submit "アカウント作成", class:" btn active login-btn" %>
        </div>
      <% end %>
      </div>
      <div style="margin-top: 20px; font-size: 0.8125rem;">
        <div class="actions">
          <span style="color: #949697; margin-right: 10px;">すでにアカウントをお持ちですか？</span>
          <span><%= link_to "ログイン", new_customer_session_path, style:"color: #ff7b63;"%>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body{
    min-height: 100vh;
  }
</style>