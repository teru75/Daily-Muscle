<div class="container">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4 customer-devise-box">
      <h2>アカウントにログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field">
          <label>パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <label>記憶する</label>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
      <%= link_to "新規登録", new_customer_registration_path(resource_name) %><br>
      <%= link_to "パスワードを忘れてしまった方へ", new_password_path(resource_name) %>
    </div>
  </div>
</div>
