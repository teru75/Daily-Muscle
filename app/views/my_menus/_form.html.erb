<table class="table table-striped table-bordered" style="margin-top: 20px; width: 90%;">
  <tr>
    <td colspan="2" style="text-align: center;" class="info"><%= f.select :part, [["全身", :whole_body], ["上半身", :upper_body], ["腕", :arm], ["胸", :breast], ["肩", :shoulder],["背中", :back], ["下半身", :lower_body], ["体幹", :trunk]], class:"form-control" %></td>
  </tr>
  <tbody class="menu_items">
    <%= f.fields_for :my_menu_items do |i| %>
        <%= render "my_menu_item_fields", f: i %>
    <% end %>
  </tbody>
</table>
<%= link_to_add_association "メニューを追加", f, :my_menu_items, data: {"association-insertion-node" => "tbody.menu_items", "association-insertion-method" => "append"} %>

<div class="actions">
  <%= f.submit "登録", class:"btn btn-primary" %>
</div>