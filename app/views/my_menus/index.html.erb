<div class="container">
  <div class="row my-menu-content">
    <h1 class="page-header">マイメニュー　一覧</h1>
    <div class="col-xs-7">
      <div>
        <div style="margin-bottom: 20px;">
          <% if @customer == current_customer %>
          <span><%= link_to "新規登録する",new_customer_my_menu_path, class:" btn btn-primary" %></span>
          <% end %>
        </div>
      </div>
      <% if @whole_bodys.exists? %>
      <div>
        <h4>全身</h4>
        <div class="my-menu-item">
          <% @whole_bodys.each do |menu| %>
