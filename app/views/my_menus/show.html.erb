<div class="container" style="height: 1000px;">
  <%= render "error_message", my_menu: @my_menu %>
  <div class="row">
    <h1 id="my_menu-title" class="page-header">マイメニュー詳細</h1>
    <div class="col-xs-8" style="margin: 50px 0px;">
      <% if @my_menu.customer_id == current_customer.id %>
      <button onclick="display()" class="btn btn-success">編集する</button>
      <%= link_to "削除する", customer_my_menu_path(@my_menu), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
      <% end %>
      <%= link_to "一覧へ戻る", customer_my_menus_path(@my_menu.customer_id), class:"btn btn-info" %>
      <div id="my_menu">
        <table class="table table-striped table-bordered"  style="margin-top: 20px; width: 90%;">
          <tr class="info">
            <td width="80%" style="text-align: center; vertical-align: middle;"><%= @my_menu.theme %></td>
            <td style="text-align: center;"><span class="part-category"><%= @my_menu.part_i18n %></span></td>
          </tr>
          
          <% @my_menu.my_menu_items.each do |item| %>
          <tr style="text-align: center;">
            <td colspan="2">
              <%= item.name %>
              <% end %>
            </td>
          </tr>
        </table>

        <div id="like-<%= @my_menu.id %>">
        <%= render 'my_menu_likes',my_menu: @my_menu %>
        </div>
      </div>
      <div id="my_menu_edit" style="display: none;">
         <%= form_with(model: @my_menu, local: true, url: customer_my_menu_path, method: :put) do |f| %>
          <%= render "form", f:f %>
        <% end %>
      </div>
    </div>
      <div class="col-xs-4" style="border: 2px solid #eee; background-color: #eeeaec; margin: 50px 0px;">
        <div class="customer-profile" style="width:70%; margin: 70px auto; ">
        <div class="profile-image" style="width: 40%; margin: 20px auto;">
        <%= render "customers/customer_form", customer: @customer %>
      </div>
  </div>
</div>

