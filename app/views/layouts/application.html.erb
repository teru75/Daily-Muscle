<!DOCTYPE html>
<html>
  <head>
    <title>DailyMuscle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fruid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <% if customer_signed_in? %>
        <%= link_to "タイトル", customer_path(current_customer), class:"navbar-brand", data: {"turbolinks" => false} %>
        <% elsif admin_signed_in? %>
        <%= link_to "タイトル", admin_homes_top_path, class:"navbar-brand" %>
        <% else %>
        <%= link_to "タイトル", root_path, class:"navbar-brand" %>
        <% end %>
      </div>
      <div class="collapse navbar-collapse" id="navbarEexample">
        <ul class="nav navbar-nav navbar-right">
          <% if customer_signed_in? %>
          <li><%= link_to "新規作成", new_event_path %></li>
          <li><%= link_to "タイムライン", events_path %></li>
          <li><%= link_to "コミュニティ", customer_groups_path(current_customer) %></li>
          <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
          <li></li>
          <% elsif admin_signed_in? %>
          <li><%= link_to "テンプレート一覧", admin_event_templates_path%></li>
          <li><%= link_to "会員トレーニング一覧", admin_events_path %></li>
          <li><%= link_to "会員一覧", admin_customers_path %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
          <% elsif current_page?(new_admin_session_path) %>
          <% else %>
          <li><%=link_to "新規登録", new_customer_registration_path %></li>
          <li><%= link_to "ログイン", new_customer_session_path %></li>
          <li><a href="#link">アプリについて</a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <%= render 'layouts/flash_messages' %>
  <body >
    <%= yield %>
  </body>
</html>
