<div class="container">
  <div class="row" style="margin-bottom: 50px;">
    <div class="col-xs-8">
    <h1 class="page-header">いいね一覧</h1>
     <% @likes.each do |like| %>
      <% my_menu = MyMenu.find_by(id: like.my_menu_id) %>
      <div class="row" style="border-bottom: solid 1px #eee; margin-top: 20px;">
        <div class="col-xs-12">
        <table width=70% class="table table-striped table-bordered">
          <tr>
            <th width="50%" colspan="2">
              <%= my_menu.theme %>
            </th>
            <td class="success">
              <div id="like-<%= my_menu.id %>">
              <%= render 'my_menus/my_menu_likes',my_menu: my_menu %>
              </div>
            </td>
          </tr>
          <tr>
            <td colspan="2">部位</td>
            <td colspan="2">
              <div style="display: flex;  justify-content: space-between;">
                <div>
                <%= my_menu.part_i18n %>
                </div>
                <div>
                <span style="text-align: right;"><%= link_to "詳細・・", customer_my_menu_path(my_menu.customer_id, my_menu) %></span>
                </div>
              </div>
            </td>
          </tr>
        </table>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-xs-offset-1 col-xs-3" style="border: 2px solid #eee; background-color: #eeeaec; margin-top: 50px">
      <div class="customer-profile" style="width:70%; margin: 70px auto; ">
      <div class="profile-image" style="width: 40%; margin: 20px auto;">
      <%= render "customers/customer_form", customer: @customer %>
    </div>

    </div>
  </div>
</div>