<div class="container" style="min-height: 600px;">
  <%= render "error_message", my_supplement: @my_supplement %>
  <div class="row" >
    <div class="col-xs-8" style="margin: 50px 0px;">
      <h3 id="my_supplement-title">マイサプリメント詳細</h3>
      <% if @my_supplement.customer_id == current_customer.id %>
      <button onclick="display()" class="btn btn-success">編集する</button>
      <%= link_to "削除する", customer_my_supplement_path(@my_supplement), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
      <% end %>
      <%= link_to "一覧へ戻る", customer_my_supplements_path(@my_supplement.customer_id), class:"btn btn-info" %>
      <div id="my_supplement">
        <table class="table table-striped table-bordered"  style="margin-top: 20px; width: 90%;">
          <tr>
            <td>名前</td>
            <td><%= @my_supplement.name %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><span class="part-category"><%= @my_supplement.genre_i18n %></span></td>
          </tr>
          <tr>
            <td>ブランド</td>
            <td><%= @my_supplement.brand %></td>
          </tr>
        </table>
      </div>
      <div id="my_supplement_edit" style="display: none;">
         <%= form_with(model: @my_supplement, local: true, url: customer_my_supplement_path, method: :put) do |f| %>
          <%= render "form", f:f %>
          <% end %>
      </div>
    </div>

    <div class="col-xs-4" style="border: 2px solid #eee; background-color: #eeeaec; margin: 50px 0px;">
      <div class="customer-profile" style="width:70%; margin: 70px auto; ">
      <div class="profile-image" style="width: 40%; margin: 20px auto;">
      <%= render "customers/customer_form", customer: @customer %>
    </div>
  </div>
</div>
