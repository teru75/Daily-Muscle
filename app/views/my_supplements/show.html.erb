<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>マイサプリメント詳細</h3>
      <% if @my_supplement.customer_id == current_customer.id %>
      <button onclick="display()">編集する</button>
      <%= link_to "削除する", customer_my_supplement_path(@my_supplement), class:"btn active", method: :delete, "data-confirm" => "本当に消しますか？" %>
      <% end %>
      <table class="table" id="my_supplement">
        <tr>
          <td ><%= @my_supplement.name %></td>
          <td><%= @my_supplement.genre %></td>
          <td><%= @my_supplement.brand %></td>
        </tr>
      </table>
    
      <div id="my_supplement_edit" style="display: none;">
        <%= form_with(model: @my_supplement, local: true, url: customer_my_supplement_path(@my_supplement), method: :put) do |f| %>
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class:"form-control" %>
        <%= f.label :genre, "ジャンル" %>
        <%= f.select :genre, [["ホエイプロテイン", :whey], ["ソイプロテイン", :soy], ["カゼインプロテイン", :casein], ["アミノ酸系", :amino], ["コンディション系", :condition]], class:"form-control" %>
        <%= f.label :brand, "ブランド" %>
        <%= f.text_field :brand, class:"form-control" %>

        <div class="actions">
          <%= f.submit "登録" %>
        </div>

      <% end %>
      </div>
    </div>
  </div>
</div>

