<table class="table" style="margin-top: 20px; width: 90%;">
  <tr>
    <td>
      <%= f.label :name, "名前" %>
    </td>
    <td><%= f.text_field :name, class:"form-control" %>
    </td>
  </tr>
  <tr>
    <td><%= f.label :genre, "ジャンル" %></td>
    <td><%= f.select :genre, [["ホエイプロテイン", :whey], ["ソイプロテイン", :soy], ["カゼインプロテイン", :casein], ["アミノ酸系", :amino], ["コンディション系", :condition]], class:"form-control" %>
    </td>
  </tr>
</tr>
<tr>
  <td><%= f.label :brand, "ブランド" %></td>
  <td><%= f.text_field :brand, class:"form-control" %></td>
</tr>
</table>
<div class="actions">
  <%= f.submit "登録", class:"btn btn-primary" %>
</div>