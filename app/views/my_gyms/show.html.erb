<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>マイジム詳細</h3>
      <% if @my_gym.customer_id == current_customer.id %>
      <button onclick="display()">編集する</button>
      <%= link_to "削除する", customer_my_gym_path(@my_gym), class:"btn active", method: :delete, "data-confirm" => "本当に消しますか？" %>
      <% end %>
      <table class="table" id="my_gym">
        <tr>
          <td ><%= @my_gym.name %></td>
        </tr>
      </table>
    
      <div id="my_gym_edit" style="display: none;">
        <%= form_with(model: @my_gym, local: true, url: customer_my_gym_path(@my_gym), method: :put) do |f| %>
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class:"form-control" %>
        <div class="actions">
          <%= f.submit "登録" %>
        </div>

      <% end %>
      </div>
    </div>
  </div>
</div>

