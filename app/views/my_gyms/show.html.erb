<div class="container" style="min-height: 600px;">
  <%= render "error_message", my_gym: @my_gym %>
  <div class="row">
    <h1 id="my_gym-title" class="page-header">マイジム詳細</h1>
    <div class="col-xs-8" style="margin: 50px 0px;">
      <% if @my_gym.customer_id == current_customer.id %>
      <button onclick="display()" class="btn btn-success">編集する</button>
      <%= link_to "削除する", customer_my_gym_path(@my_gym), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
      <% end %>
      <%= link_to "一覧へ戻る", customer_my_gyms_path(@my_gym.customer_id), class:"btn btn-info" %>
      <div id="my_gym">
        <table class="table"  style="margin-top: 20px; width: 90%;">
          <tr>
            <td>名前</td>
            <td><%= @my_gym.name %></td>
          </tr>
        </table>
      </div>
      <div id="my_gym_edit" style="display: none;">
         <%= form_with(model: @my_gym, local: true, url: customer_my_gym_path, method: :put) do |f| %>
          <%= render "form", f:f %>
          <% end %>
      </div>
    </div>

    <div class="col-xs-4" style="border: 2px solid #eee; background-color: #eeeaec; margin: 50px 0px;">
      <div class="customer-profile" style="width:70%; margin: 70px auto; ">
      <div class="profile-image" style="width: 40%; margin: 20px auto;">
      <%= render "customers/customer_form", customer: @customer %>
    </div>
  </div>
</div>

