<div class="container">
  <div class="row my-menu-content">
    <h1 class="page-header">マイジム　一覧</h1>
    <div class="col-xs-8">
      <div>
        <div style="margin-bottom: 20px;">
        <% if @customer == current_customer %>
        <span><%= link_to "新規登録する",new_customer_my_gym_path, class:" btn btn-primary" %></span>
        <% end %>
        </div>
      </div>

      <div>
        <% @customer.my_gyms.each do |gym| %>
        <table class="table table-striped table-bordered">
        <tr>
          <td>
            <%= link_to customer_my_gym_path(gym.customer_id, gym) do %>
            <%= gym.name %>
            <% end %>
          </td>
        </tr>
        </table>
        <% end %>
      </div>
    </div>
    
    <div class="col-xs-4" style="border: 2px solid #eee; background-color: #eeeaec;">
      <div class="customer-profile" style="width:70%; margin: 70px auto; ">
      <div class="profile-image" style="width: 40%; margin: 20px auto;">
      <%= render "customers/customer_form", customer: @customer %>
    </div>
  </div>
</div>