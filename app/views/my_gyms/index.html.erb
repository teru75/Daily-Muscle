<div class="container">
  <div class="row my-menu-content">
    <h1 class="page-header">マイジム　一覧</h1>
    <div class="col-xs-7">
      <div>
        <div style="margin-bottom: 20px;">
        <% if @customer == current_customer %>
        <span><%= link_to "新規登録する", new_customer_my_gym_path, class:" btn btn-primary" %></span>
        <% end %>
        </div>
      </div>

      <div style="width: 70%;">
        <% @customer.my_gyms.each do |gym| %>
        <table class="table table-striped table-bordered">
        <tr>
          <td width="60%">
            <%= gym.name %>
          </td>
        <% if gym.customer_id == current_customer.id %>
          <td style="text-align: center;">
            <%= link_to "削除する", customer_my_gym_path(gym.customer_id, gym), class:"btn btn-danger", method: :delete,  "data-confirm" => "本当に削除しますか？" %>
          </td>
          <% end %>
        </tr>
        </table>
        <% end %>
      </div>
    </div>
    <%= render "customers/customer_form", customer: @customer %>
  </div>
</div>