<div class="container" style="height: 1000px;">
  <div class="row" style="margin: 30px 0px;">
    <div class="col-xs-7" >
      <h3 id="event_template-title" style="margin-top: 0px;">メニューテンプレート詳細</h3>
      <%= link_to "一覧へ戻る", event_templates_path, class:"btn btn-info" %>
      <div id="event_template" style="margin-bottom: 20px;">
        <table class="table table-striped table-bordered"  style="margin-top: 20px; width: 90%;">
          <tr class="info">
            <td width="80%" style="text-align: center;"><%= @event_template.theme %></td>
            <td style="text-align: center;"><span class="part-category"><%= @event_template.part_i18n %></span></td>
          </tr>
          <% @event_template.menu_templates.each do |item| %>
          <tr style="text-align: center;">
            <td colspan="2">
              <%= item.name %>
              <% end %>
            </td>
          </tr>
          <tr style="text-align: center;" class="success">
            <td colspan="2"><%= @event_template.introduction %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="col-xs-offset-1 col-xs-4" style="border: 2px solid #eee; background-color: #eeeaec; margin-top: 30px;">
      <%= render "customers/customer_form", customer: @customer %>
    </div>
  </div>
</div>