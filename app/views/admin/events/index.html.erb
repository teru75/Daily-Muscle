<div class="container" style="min-height: 600px;">
  <div class="row">
    <div class=" col-xs-offset-2 col-xs-8">
      <h1>筋トレ一覧</h1>
      <table class="table table-striped table-bordered" width="100%">
        <tr class="info">
          <th>ユーザー</th>
          <th>部位</th>
          <th>トレーニング時間</th>
        </tr>
        <% @events.each do |event| %>
        <tr>
          <td>
            <%= link_to admin_customer_path(event.customer) do %>
            <%= attachment_image_tag event.customer, :profile_image,  :size =>'40x40', format: 'jpeg''jpg''svg''png',fallback: "avator.svg" %>
            <%= event.customer.name %>
            <% end %>
            </td>
          <td>
            <%= link_to admin_event_path(event) do %>
            <%= event.part_i18n %>
            <% end %>
            </td>
          <td><%= ((event.end-event.start)/60).ceil %>分</td>
        </tr>
        <% end %>
      </table>
      <%= paginate @events, class: "paginate" %>
    </div>
  </div>
</div>