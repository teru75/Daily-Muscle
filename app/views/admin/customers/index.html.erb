<div class="container">
  <div class="row" style="margin-top: 20px; margin-bottom: 40px;">
    <div class="col-xs-offset-3 col-xs-6">
      <h1>会員一覧</h1>
      <table class="table table-striped table-bordered">
        <tr>
          <th width="30%">プロフィール画像</th>
          <th width="30%">名前</th>
          <th width="40%">メールアドレス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
          <td style="text-align: center;"><%= attachment_image_tag customer, :profile_image,  :size =>'80x80', format: 'jpeg''jpg''svg''png',fallback: "avator.svg" %></td>
          <td>
            <%= link_to admin_customer_path(customer), data: {"turbolinks" => false} do %>
            <%= customer.name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
        </tr>
        <% end %>
      </table>
      <%= paginate @customers, class: "paginate" %>
    </div>
  </div>
</div>