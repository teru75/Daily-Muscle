<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>メニューテンプレート詳細</h3>
      <button onclick="display()">編集する</button>
      <table class="table" id="event_template">
        <tr>
          <td ><%= @event_template.theme %></td>
          <td><%= @event_template.part_i18n %></td>
        </tr>
        
        <% @event_template.menu_templates.each do |item| %>
        <tr>
          <td>
            <%= item.name %>
            <% end %>
          </td>
        </tr>
      </table>
    
      <div id="event_template_edit" style="display: none;">
        <%= form_with(model: @event_template, local: true, url: admin_event_template_path(@event_template), method: :put) do |f| %>
        <%= f.label :theme, "テーマ" %>
        <%= f.text_field :theme, class:"form-control" %>
        <%= f.label :part, "部位" %>
        <%= f.radio_button :is_enabled, true %> 有効
        <%= f.radio_button :is_enabled, false %> 無効
        <%= f.select :part, [["全身", :whole_body], ["上半身", :upper_body], ["腕", :arm], ["胸", :breast], ["肩", :shoulder],["背中", :back], ["下半身", :lower_body], ["体幹", :trunk]], class:"form-control" %>

        <div class="event_templates">
          <%= f.fields_for :menu_templates do |i| %>
            <%= render "menu_template_fields", f: i %>
          <% end %>
          <div class="links">
            <br><%= link_to_add_association "メニューを追加", f, :menu_templates %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "登録" %>
        </div>

      <% end %>
      </div>
    </div>
  </div>
</div>

