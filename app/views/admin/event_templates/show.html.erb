<div class="container" style="min-height: 500px; width: 100%;">
  <div class="row" style="margin: 30px 0px;">
    <div class="col-xs-7" >
      <h3 id="event_template-title" style="margin-top: 0px;">メニューテンプレート詳細</h3>
      <button onclick="display()" class="btn btn-success">編集する</button>
      <%= link_to "一覧へ戻る", admin_event_templates_path, class:"btn btn-info" %>
      <div id="event_template" style="margin-bottom: 20px;">
        <table class="table table-striped table-bordered"  style="margin-top: 20px; width: 90%;">
          <tr class="info">
            <td width="80%" style="text-align: center;"><%= @event_template.theme %></td>
            <td style="text-align: center;"><span class="part-category"><%= @event_template.part_i18n %></span></td>
          </tr>
          <% @event_template.menu_templates.each do |item| %>
          <tr style="text-align: center;">
            <td colspan="2">
              <%= item.name %>
              <% end %>
            </td>
          </tr>
          <tr style=" background-color: #eeeaec;">
            <td colspan="2" rowspan="<%=@event_template.introduction.length%>">
              <%= @event_template.introduction %>
            </td>
          </tr>
        </table>
      </div>
      <div id="event_template_edit" style="display: none;">
         <%= form_with(model: @event_template, local: true, url: admin_event_template_path, method: :put) do |f| %>
         <%= f.radio_button :is_enabled, true %> 有効
         <%= f.radio_button :is_enabled, false %> 無効
          <%= render "form", f:f %>
      </div>
    </div>
    <div class="col-xs-5" id="event_template_introduction" style="display: none;">
      <%= f.label :introduction, "説明文" %>
      <%= f.text_area :introduction, class:"form-control" %>
      <% end %>
    </div>
  </div>
</div>





