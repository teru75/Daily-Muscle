<table class="table table-striped table-bordered" style="margin-top: 20px; width: 90%;">
  <tr>
    <td width="80%" style="text-align: center;">
      <%= f.label :theme, "テーマ" %>
      <%= f.text_field :theme, class:"form-control" %>
      </td>
    <td style="vertical-align: middle;"><%= f.select :part, [["全身", :whole_body], ["上半身", :upper_body], ["腕", :arm], ["胸", :breast], ["肩", :shoulder],["背中", :back], ["下半身", :lower_body], ["体幹", :trunk]], class:"form-control" %></td>
  </tr>
  <tbody class="menu_templates">
    <%= f.fields_for :menu_templates do |i| %>
        <%= render "menu_template_fields", f: i %>
    <% end %>
  </tbody>
</table>
<%= link_to_add_association "メニューを追加", f, :menu_templates, data: {"association-insertion-node" => "tbody.menu_templates", "association-insertion-method" => "append"} %>

<div class="actions">
  <%= f.submit "登録", class:"btn btn-primary" %>
</div>